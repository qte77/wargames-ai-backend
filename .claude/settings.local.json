{
  "env": {
    "CLAUDE_CODE_ENABLE_TELEMETRY": "0",
    "DISABLE_TELEMETRY": "1"
  },
  "permissions": {
    "allow": [
      "Bash(date:*)",
      "Bash(git:diff*)",
      "Bash(git:log*)",
      "Bash(git:status*)",
      "Bash(git log --grep:*)",
      "Bash(make:*)",
      "Bash(mkdir:*)",
      "Bash(source:*)",
      "Bash(touch:*)",
      "Bash(tree:*)",
      "Bash(uv sync:*)",
      "Bash(uv run mypy:*)",
      "Bash(uv run pytest:*)",
      "Bash(uv run ruff:*)",
      "Edit(AGENTS.md)",
      "Edit(docs/**/*.md)",
      "Edit(Makefile)",
      "Edit(README.md)",
      "Edit(src/**/*.py)",
      "Edit(src/**/*.json)",
      "Edit(tests/**/*.py)",
      "Edit(tests/**/*.json)",
      "Edit(pyproject.toml)",
      "WebFetch(domain:github.com/DavidAnson/markdownlint/blob/main/doc/Rules.md)",
      "WebFetch(domain:docs.anthropic.com)"
    ],
    "deny": [
      "Bash(cat:*)",
      "Bash(find:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git push:*)",
      "Bash(grep:*)",
      "Bash(head:*)",
      "Bash(ls:*)",
      "Bash(mv:*)",
      "Bash(rg:*)",
      "Bash(rm:*)",
      "Bash(tail:*)",
      "Edit(.claude/commands/*.md)",
      "Edit(.claude/settings.local.json)",
      "Edit(CLAUDE.md)"
    ]
  }
}